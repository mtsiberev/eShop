@using System.Web.Optimization
<!doctype html>
<html ng-app="AdminApp">
    <head>
        <title>Shopping Cart with AngularJS</title>
        @*
        <!-- Bootstrap -->
        <link href="http://netdna.bootstrapcdn.com/twitter-bootstrap/2.3.1/css/bootstrap-combined.min.css" rel="stylesheet" type="text/css" />
        <!--<script src="http://netdna.bootstrapcdn.com/twitter-bootstrap/2.3.1/js/bootstrap.min.js" type="text/javascript" ></script>-->
        <!-- AngularStore app -->
    *@
        
        <link rel="stylesheet" href="~/AngularJS/Mdl/material.css">
        <script src="~/AngularJS/Mdl/material.js"></script>
        
        
    </head>
    <body>
        
        
        <div class="container-fluid">
            <div class="row-fluid">
                <div class="span10 offset1">
                    <h1 class="well">
                        <a href="~/AngularJS/Views/default.htm">
                            <img src="~/AngularJS/Views/img/logo.png" height="60" width="60" alt="logo" />
                        </a>

                        @Html.ActionLink("Main Menu", "Index", "Home")

                        Angular Admin Page
                    </h1>

                    <div ng-controller="AdminMenuController" style="border: 1px solid black; display: table-cell; width: 33%; word-wrap: break-word">
                        <div class="block">
                            <button class="mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect mdl-button--accent"
                                    ng-click="selectMenuOption('users')">
                                Users
                            </button>
                            <p>
                            <p>
                            <button class="mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect mdl-button--accent"
                                    ng-click="selectMenuOption('catalogs')">
                                Catalogs
                            </button>
                            <p>
                            <p>
                            <button class="mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect mdl-button--accent"
                                    ng-click="selectMenuOption('products')">
                                Products
                            </button>
                        </div>
                    </div>

                    <div ng-view></div>
                </div>
            </div>
        </div>


        /@*Bundle not working*@
        @Scripts.Render("~/angularBundle")

        <script src="~/Scripts/jquery-2.1.4.js"></script>
        <script src="~/Scripts/jquery.unobtrusive-ajax.js"></script>
        <script src="~/Scripts/jquery.validate.js"></script>
        <script src="~/Scripts/angular.js"></script>
        <script src="~/Scripts/angular-route.js"></script>

        <script src="~/AngularJS/Objects/product.js" type="text/javascript"></script>
        <script src="~/AngularJS/Objects/store.js" type="text/javascript"></script>
        <script src="~/AngularJS/Objects/shoppingCart.js" type="text/javascript"></script>
        <script src="~/AngularJS/Objects/catalog.js" type="text/javascript"></script>

        <script src="~/AngularJS/Services/DataService.js"></script>
        <script src="~/AngularJS/Services/UsersService.js"></script>
        <script src="~/AngularJS/Services/ProductsService.js"></script>
        <script src="~/AngularJS/Services/CatalogsService.js"></script>

        <script src="~/AngularJS/Controllers/AdminMenuController.js"></script>
        <script src="~/AngularJS/Controllers/ShopController.js"></script>

        <script src="~/AngularJS/Controllers/UsersController.js"></script>
        <script src="~/AngularJS/Controllers/UserDetailController.js"></script>

        <script src="~/AngularJS/Controllers/ProductsController.js"></script>
        <script src="~/AngularJS/Controllers/ProductDetailController.js"></script>

        <script src="~/AngularJS/Controllers/CatalogsController.js"></script>
        <script src="~/AngularJS/Controllers/CatalogDetailController.js"></script>

        <script src="~/AngularJS/Applications/AdminApp.js"></script>
        <script src="~/AngularJS/Applications/ShopApp.js"></script>
        
        
        
        <footer class="mdl-mini-footer">
            <div class="mdl-mini-footer__left-section">
                <div class="mdl-logo">
                    More Information
                </div>
                <ul class="mdl-mini-footer__link-list">
                    <li><a href="#">Help</a></li>
                    <li><a href="#">Privacy and Terms</a></li>
                    <li><a href="#">User Agreement</a></li>
                </ul>
            </div>
            <div class="mdl-mini-footer__right-section">
                <button class="mdl-mini-footer__social-btn"></button>
                <button class="mdl-mini-footer__social-btn"></button>
                <button class="mdl-mini-footer__social-btn"></button>
            </div>
        </footer>
        

    </body>
</html>


