                }
                <a class="mdl-navigation__link" href="@Url.Action("Index", "Shop")"><span>eStore</span></a>

                <a class="mdl-navigation__link" href="@Url.Action("Logout", "Account")"><span>Logout</span></a>

                <a class="mdl-navigation__link" href="">Link</a>
            </nav>
        </div>
        <main class="mdl-layout__content">
            <div class="page-content"><!-- Your content goes here --></div>
        </main>
    </div>
 
 
</body>
</html>








